# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.FileFinder.index
GET     /enqueue/:path              controllers.FileFinder.enqueue(path)
GET     /files                      controllers.FileFinder.files(query: String)

GET     /search                     controllers.LineSearch.index
GET     /search/lines               controllers.LineSearch.lines(query: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/javascripts/ff/routes  controllers.FileFinder.jsRoutes()
GET     /assets/javascripts/ls/routes  controllers.LineSearch.jsRoutes()
GET     /assets/*file               controllers.Assets.at(path="/public", file)
