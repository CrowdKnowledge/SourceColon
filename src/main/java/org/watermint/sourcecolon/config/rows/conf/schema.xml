<?xml version="1.0" encoding="UTF-8" ?>
<schema name="sourcecolon">
    <types>
        <fieldtype name="string"   class="solr.StrField"/>
        <fieldtype name="sequence" class="solr.TrieLongField"/>
        <fieldtype name="text_ja"  class="solr.TextField">
            <analyzer>
                <tokenizer class="solr.JapaneseTokenizerFactory" />
            </analyzer>
        </fieldtype>
    </types>
    <fields>
        <field name="id"        type="string"   indexed="true" stored="true" required="true"  multiValued="false" />
        <field name="path_hash" type="string"   indexed="true" stored="true" required="true"  multiValued="false" />
        <field name="path_ext"  type="string"   indexed="true" stored="true" required="true"  multiValued="false" />
        <field name="path"      type="string"   indexed="true" stored="true" required="true"  multiValued="false" />
        <field name="text_seq"  type="sequence" indexed="true" stored="true" required="false" multiValued="false"/>
        <field name="text"      type="text_ja"  indexed="true" stored="true" required="false" multiValued="false"/>
    </fields>
    <uniqueKey>id</uniqueKey>
    <defaultSearchField>text</defaultSearchField>
    <solrQueryParser defaultOperator="AND"/>
</schema>